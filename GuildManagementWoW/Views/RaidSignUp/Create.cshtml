@model GuildManagementWoW.ViewModels.RaidSignUpCreateVM

<h2>Sign Up for Raid</h2>

<form asp-action="Create" asp-controller="RaidSignUp" method="post">
    <input type="hidden" asp-for="RaidId" />

    <div class="form-group">
        <label asp-for="CharacterId">Select your character</label>
        <select asp-for="CharacterId" asp-items="Model.Characters" class="form-control">
            <option value="">-- choose character --</option>
        </select>
        <span asp-validation-for="CharacterId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Sign Up</button>
    <a asp-action="Index" asp-controller="Raid" class="btn btn-secondary">Cancel</a>
</form>

