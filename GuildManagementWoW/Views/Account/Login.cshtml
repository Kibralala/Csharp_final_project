@model GuildManagementWoW.ViewModels.LoginViewModel;
@{
	ViewData["Title"] = "Login";
}
<div class="container">
	<h2 class="d-flex justify-content-center">Login</h2>
	<div class="container pt-5 d-flex justify-content-center align-items-center">
		<form asp-action="Login" method="post">
			<div class="mb-3">
				<label asp-for="UserName" class="form-label"></label>
				<input asp-for="UserName" class="form-control" />
				<span asp-validation-for="UserName" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<label asp-for="Password" class="form-label"></label>
				<input asp-for="Password" class="form-control" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>

			<button type="submit" class="btn btn-primary btn-outline-dark">Login</button>
		</form>

		@if (!ViewData.ModelState.IsValid)
		{
			<p style="color:red;">@ViewData.ModelState.Values.SelectMany(v => v.Errors).FirstOrDefault()?.ErrorMessage</p>
		}
	</div>
</<div>
