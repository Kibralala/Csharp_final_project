@model GuildManagementWoW.DTO.Raid.RaidDetailDTO

@{
	ViewData["Title"] = "Raid Details";
}

<h1>@Model.Name</h1>

<div class="raid-detail container  mb-4">
	<div>
		<strong>Begins At:</strong> @(Model.BeginAt.HasValue? Model.BeginAt.Value.ToString("yyyy-MM-dd HH:mm") : "-")
	</div>
	<div>
		<strong>Description:</strong> @Model.Description
	</div>
</div>

<h3>Signed up characters:</h3>

<div class= "raid-detail container mb-4">
@if (Model.SignUps != null && Model.SignUps.Any())
{
	<ul class="raid-signups">
		@foreach (var signup in Model.SignUps)
		{
			<li>@signup.CharacterName (@signup.ClassName)</li>
		}
	</ul>
}
else
{
	<p class="raid-signups">No one has signed up yet.</p>
}
</div>
<div class="container mb-4">
<p>
		@if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin") || User.IsInRole("Officer"))
		{
			<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-edit">Edit</a>
		}
		<a asp-action="Index" class="btn btn-primary btn-outline-dark">Back to List</a>
</p>
</div>
