@model IEnumerable<GuildManagementWoW.DTO.Raid.RaidIndexDTO>

@{
	ViewData["Title"] = "Raids";
}

<h1>All Raids</h1>

@if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin") || User.IsInRole("Officer"))
{
	<p>
		<a asp-action="Create" class="btn btn-primary btn-outline-dark">Create New Raid</a>
	</p>
}

<table class="table table-striped index-table">
	<thead>
		<tr>
			<th>Name</th>
			<th>Begins At</th>
			<th>Description</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var raid in Model)
		{
			<tr>
				<td>
					<a asp-action="Detail" asp-route-id="@raid.Id">
						@raid.Name
					</a>
				</td>
				<td>@(raid.BeginAt.HasValue? raid.BeginAt.Value.ToString("yyyy-MM-dd HH:mm") : "-")</td>
				<td>@raid.Description</td>
				<td>
					@if (raid.IsSignedUp)
					{
						<form asp-controller="RaidSignUp" asp-action="Cancel" method="post" style="display:inline">
							<input type="hidden" name="id" value="@raid.SignUpId" />
							<button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to sign off this raid?'">Cancel Sign Up</button>
						</form>
					}
					else
					{
						<a asp-controller="RaidSignUp" asp-action="Create" asp-route-raidId="@raid.Id" class="btn btn-signup btn-sm">
							Sign Up
						</a>

					}
					@if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin") || User.IsInRole("Officer"))
					{
						<a asp-action="Edit" asp-route-id="@raid.Id" class="btn btn-sm btn-edit">Edit</a>
						<form asp-action="Delete" asp-route-id="@raid.Id" method="post" style="display:inline">
							<button type="submit" class="btn btn-sm btn-danger btn-outline-dark" onclick="return confirm('Are you sure you want to delete this raid?');">
								Delete
							</button>
						</form>
					}
				</td>
			</tr>
		}
	</tbody>
</table>

