@{
	ViewData["Title"] = "Home";
}
<div class="container">
	<div class="hero">
		<h1 class="display-4">Welcome to WoW Guild Management</h1>
		<p class="lead">Manage your guild, raids, characters, and members efficiently.</p>
	</div>

	<div class="row mt-4">
		<div class="row">
			<div class="col-md-6">
				<div class="card mb-3 shadow-sm">
					<div class="card-body">
						<h5 class="card-title">Features</h5>
						<ul>
							<li>Register and login as a player</li>
							<li>Sign up for raids and manage your characters</li>
							<li>Admins can manage users, roles, and raids</li>
							<li>Officers can assist with raid management</li>
						</ul>
					</div>
				</div>
			</div>
			<div class="col-md-6">
				<div class="card mb-3 shadow-sm">
					<div class="card-body">
						<h5 class="card-title">Test Accounts</h5>
						<p>To try out the system, log in with the default Admin account:</p>
						<ul>
							<li><strong>Username:</strong> Guest</li>
							<li><strong>Password:</strong> Guild123</li>
						</ul>
						<p>Or register your own player account (with the Raider role set as default).</p>
					</div>
				</div>
			</div>
		</div>
		<div class="col-md-6">
			<div class="card mb-3 home-card shadow-sm">
				<div class="card-body">
					<h5 class="card-title">Coming Soon</h5>
					<ul>
						<li>Character management (classes, main/off specs and roles)</li>
						<li>Raid sign-ups with capacities and missing member tracking</li>
						<li>Calendar with upcoming raids</li>
						<li>Guild noticeboard / announcements</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>