@model GuildManagementWoW.DTO.Character.CharacterEditDTO

<h2 class="d-flex justify-content-center">Edit Your Character</h2>
<div class="container pt-5 d-flex justify-content-center align-items-center">
<form asp-action="Edit" method="post">
    <input asp-for="Id" type="hidden" />

    <div class="form-group">
        <label asp-for="Nick"></label>
        <input asp-for="Nick" class="form-control" value="@Model.Nick" readonly/>
        @* <input type="hidden" asp-for="Nick"/> *@
    </div>

    <div class="form-group">
        <label asp-for="Class"></label>
        <input asp-for="Class" class="form-control" value="@Model.Class" readonly />
        @* <input type="hidden" asp-for="Class" /> *@

    </div>

    <div class="form-group">
        <label asp-for="MainSpec"></label>
        <input asp-for="MainSpec" class="form-control" />
        <span asp-validation-for="MainSpec" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MainRole"></label>
        <input asp-for="MainRole" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="OffSpec"></label>
        <input asp-for="OffSpec" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="OffRole"></label>
        <input asp-for="OffRole" class="form-control" />
    </div>

    <div class="form-group form-check">
        <input asp-for="IsMainCharacter" class="form-check-input" />
        <label asp-for="IsMainCharacter" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary btn-outline-dark" value="Edit">Save</button>
</form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
